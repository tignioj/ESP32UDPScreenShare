#include <WiFi.h>
#include <WiFiUdp.h>
#include "common.h"

// ================= WiFi =================
const char* ssid = WIFI_SSID_STR;
const char* password = WIFI_PASSWORD_STR;

WiFiUDP udp;
#define UDP_PORT 8888

// ================= Image =================
#define IMG_W 240
#define RGB_LINE_BATCH 3

// ================= Frame Queue =================
#define FRAME_QUEUE_SIZE 12

struct FrameData {
    uint16_t y_start;
    uint16_t line_count;
    uint16_t lines[RGB_LINE_BATCH * IMG_W];
};

struct FrameQueue {
    FrameData buf[FRAME_QUEUE_SIZE];
    volatile uint8_t head = 0;   // 写
    volatile uint8_t tail = 0;   // 读
    volatile uint8_t count = 0;  // 数量
};

FrameQueue frameQueue;

// ================= DMA =================
uint16_t* dmaBuf[2];
volatile uint8_t dmaSel = 0;

// ================= Stats =================
volatile uint32_t frameCount = 0;
volatile uint32_t dropCount  = 0;
volatile uint32_t udpPackets = 0;

// ================= UDP Receiver Task =================
void udpReceiverTask(void* param) {
    while (1) {
        int packetSize = udp.parsePacket();
        if (packetSize <= 0) {
            vTaskDelay(1);
            continue;
        }

        udpPackets++;

        uint8_t header[6];
        if (udp.read(header, 6) != 6) continue;

        uint16_t y_start    = (header[2] << 8) | header[3];
        uint16_t line_count = (header[4] << 8) | header[5];

        if (line_count == 0 || line_count > RGB_LINE_BATCH) {
            udp.flush();
            continue;
        }

        uint32_t expect = IMG_W * line_count * 2;

        // ====== 队列满：丢最旧帧 ======
        if (frameQueue.count >= FRAME_QUEUE_SIZE) {
            frameQueue.tail = (frameQueue.tail + 1) % FRAME_QUEUE_SIZE;
            frameQueue.count--;
            dropCount++;
        }

        FrameData* f = &frameQueue.buf[frameQueue.head];

        if (udp.read((uint8_t*)f->lines, expect) != expect) {
            continue;
        }

        f->y_start    = y_start;
        f->line_count = line_count;

        frameQueue.head = (frameQueue.head + 1) % FRAME_QUEUE_SIZE;
        frameQueue.count++;
    }
}

// ================= Draw Frame =================
void drawFrame() {
    if (frameQueue.count == 0) return;

    FrameData* f = &frameQueue.buf[frameQueue.tail];
    uint8_t nextDma = dmaSel ^ 1;

    tft->dmaWait();

    memcpy(
        dmaBuf[nextDma],
        f->lines,
        IMG_W * f->line_count * 2
    );

    tft->startWrite();
    tft->pushImageDMA(
        0,
        f->y_start,
        IMG_W,
        f->line_count,
        dmaBuf[nextDma]
    );
    tft->endWrite();

    dmaSel = nextDma;

    frameQueue.tail = (frameQueue.tail + 1) % FRAME_QUEUE_SIZE;
    frameQueue.count--;

    frameCount++;
}

// ================= 调试输出 =================
void printDebugInfo() {
    static uint32_t lastPrint = 0;
    uint32_t now = millis();

    if (now - lastPrint > 1000) {
        lastPrint = now;

        Serial.printf(
            "heap=%u udp/s=%u drop=%u frame=%u queue=%u\n",
            ESP.getFreeHeap(),
            udpPackets,
            dropCount,
            frameCount,
            frameQueue.count
        );

        udpPackets = 0;
    }
}

// ================= Setup =================
void setup() {
    Serial.begin(115200);

    WiFi.begin(ssid, password);
    while (WiFi.status() != WL_CONNECTED) {
        delay(300);
        Serial.print(".");
    }
    Serial.println("\nWiFi connected");

    udp.begin(UDP_PORT);

    screen.init(4, 100);
    tft->initDMA();
    tft->setSwapBytes(true);

    dmaBuf[0] = (uint16_t*)heap_caps_malloc(
        IMG_W * RGB_LINE_BATCH * 2,
        MALLOC_CAP_DMA
    );
    dmaBuf[1] = (uint16_t*)heap_caps_malloc(
        IMG_W * RGB_LINE_BATCH * 2,
        MALLOC_CAP_DMA
    );

    if (!dmaBuf[0] || !dmaBuf[1]) {
        Serial.println("DMA alloc failed");
        while (1);
    }

    xTaskCreatePinnedToCore(
        udpReceiverTask,
        "udp_rx",
        8192,
        nullptr,
        2,
        nullptr,
        0
    );

    tft->fillScreen(TFT_BLACK);
}

// ================= Loop =================
void loop() {
    drawFrame();
    printDebugInfo();
}
